<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.control.MainActivity" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORWARD"
        android:id="@+id/buttonForward"
        android:layout_above="@+id/buttonLeft"
        android:layout_toRightOf="@+id/buttonLeft"
        android:layout_toEndOf="@+id/buttonLeft" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/buttonLeft"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/buttonBack"
        android:layout_below="@+id/buttonLeft"
        android:layout_toRightOf="@+id/buttonLeft"
        android:layout_toEndOf="@+id/buttonLeft" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RIGHT"
        android:id="@+id/buttonRight"
        android:layout_below="@+id/buttonForward"
        android:layout_toRightOf="@+id/buttonBack"
        android:layout_toEndOf="@+id/buttonBack" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/buttonOn"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonOff"
        android:layout_toStartOf="@+id/buttonOff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:id="@+id/buttonOff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUN"
        android:id="@+id/buttonRun"
        android:layout_alignTop="@+id/buttonBack"
        android:layout_toLeftOf="@+id/buttonOn"
        android:layout_toStartOf="@+id/buttonOn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRASP"
        android:id="@+id/buttonGrasp"
        android:layout_above="@+id/buttonRun"
        android:layout_toLeftOf="@+id/buttonLoose"
        android:layout_toStartOf="@+id/buttonLoose" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOOSE"
        android:id="@+id/buttonLoose"
        android:layout_above="@+id/buttonRun"
        android:layout_toRightOf="@+id/buttonRun"
        android:layout_toEndOf="@+id/buttonRun" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEEP"
        android:id="@+id/buttonBeep"
        android:layout_alignTop="@+id/buttonRun"
        android:layout_alignLeft="@+id/buttonLoose"
        android:layout_alignStart="@+id/buttonLoose" />
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automatic"
        android:id="@+id/buttonAutomatic"
        android:layout_below="@+id/buttonRun"
        android:layout_alignLeft="@+id/buttonRun"
        android:layout_alignStart="@+id/buttonRun"
        android:layout_alignRight="@+id/buttonBeep"
        android:layout_alignEnd="@+id/buttonBeep" />

</RelativeLayout>
